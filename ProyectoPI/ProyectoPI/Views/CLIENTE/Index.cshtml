@model IEnumerable<ProyectoPI.Models.CLIENTE>
@{
    ViewBag.Title = "Cliente";
}
<h2 class="titulosPag">CLIENTE</h2>
<p>
    @Html.ActionLink("Crear Nuevo Cliente", "Create", null, new { @class = "crearIndex" })
</p>

    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-body">
                    <img src="../Img/jumb.jpg" class="card-img-top" alt="...">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.nombre) @Html.DisplayFor(modelItem => item.primerApellido) @Html.DisplayFor(modelItem => item.segundoApellido) </h4>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.correo)</small></p>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.tel)</small></p>
                    <p class="card-text">
                        @Html.ActionLink("Consultar", "Details", new { id = item.cedulaPK }, new { @class = "prueba" }) |
                        @Html.ActionLink("Modificar", "Edit", new { id = item.cedulaPK }, new { @class = "prueba" })
                    </p>
                    <p class="card-text">@Html.ActionLink("Eliminar", "Delete", new { id = item.cedulaPK }, new { @class = "prueba" })</p>
                </div>
            </div>
        }

    </div>
