@model IEnumerable<ProyectoPI.Models.CLIENTE>
@{
    ViewBag.Title = "Cliente";
}
<h2 class="titulosPag">CLIENTE</h2>
<p>
    @Html.ActionLink("Crear Nuevo Cliente", "Create", null, new { @class = "botonGeneral colorVerde" })
</p>

    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <img src="../Img/emp.jpg" class="card-img-top" alt="...">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.nombre) @Html.DisplayFor(modelItem => item.primerApellido) </h4>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.correo)</small></p>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.tel)</small></p>
                    <p class="card-text">
                        @Html.ActionLink("Consultar", "Details", new { id = item.cedulaPK }, new { @class = "botonGeneral colorCeleste" }) 
                        @Html.ActionLink("Modificar", "Edit", new { id = item.cedulaPK }, new { @class = "botonGeneral colorCeleste" })
                    </p>
                    <p class="card-text marginElim">@Html.ActionLink("Eliminar", "Delete", new { id = item.cedulaPK }, new { @class = "botonGeneral colorCeleste" })</p>
                </div>
            </div>

        </div>
        }

    </div>
