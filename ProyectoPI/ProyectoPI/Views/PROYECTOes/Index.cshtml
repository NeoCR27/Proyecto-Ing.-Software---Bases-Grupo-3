@model IEnumerable<ProyectoPI.Models.PROYECTO>

@{
    ViewBag.Title = "Index";
}

<h2 class="titulosPag">Proyecto</h2>

@{
    string rol = ViewBag.rol;
}
<h3>Rol: @rol</h3>


@if (@rol.Equals("Jefe", StringComparison.InvariantCultureIgnoreCase))
{
    <p>
        @Html.ActionLink("Crear Nuevo Proyecto", "Create", null, new { @class = "botonGeneral colorVerde" })
    </p>
}

<div class="row">
        @foreach (var item in Model)
        {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <img src="../Img/jumb.jpg" class="card-img-top" alt="...">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.nombre) @Html.DisplayFor(modelItem => item.CLIENTE.cedulaPK) </h4>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.objetivo)</small></p>
                    @if (@rol == "Jefe")
                    {
                        <p class="card-text">
                            @Html.ActionLink("Consultar", "Details", new { id = item.idPK }, new { @class = "botonGeneral colorCeleste" }) |
                            @Html.ActionLink("Modificar", "Edit", new { id = item.idPK }, new { @class = "botonGeneral colorCeleste" })
                        </p>
                        <p class="card-text marginElim">@Html.ActionLink("Eliminar", "Delete", new { id = item.idPK }, new { @class = "botonGeneral colorCeleste" })</p>
                    }
                    else
                    {
                        <p class="card-text">
                            @Html.ActionLink("Consultar", "Details", new { id = item.idPK }, new { @class = "botonGeneral colorCeleste" }) |
                            
                        </p>

                    }





                </div>
            </div>

        </div>
        }

    </div>

   