@model ProyectoPI.Models.PROYECTO

@{
    ViewBag.Title = "Delete";
}
@{
    string rol = ViewBag.rol;
}
<h3>Rol: @rol</h3>

<h2 class="titulosPag">Elminar</h2>

@if (@rol.Equals("Jefe", StringComparison.InvariantCultureIgnoreCase))
{
    <div>
        <h4>PROYECTO</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.objetivo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.objetivo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.duracionReal)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.duracionReal)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.duracionEstimada)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.duracionEstimada)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.fechaInicio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.fechaInicio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.fechaFinalizacion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.fechaFinalizacion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.estado)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.estado)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CLIENTE.tel)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CLIENTE.tel)
            </dd>

        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" class="botonGeneral colorRojo" data-toggle="modal" data-target="#eliminar">
                        Eliminar
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="eliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel"><strong>¿Está seguro que desea elimiar el proyecto?</strong></h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                                    <input type="submit" value="Eliminar" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
}
else
{
    <h1>Los @rol NO PUEDEN ELIMINAR PROYECTOS</h1>
}
    <div class="form-actions no-color">
        @Html.ActionLink("Volver", "Index", null, new { @class = "botonGeneral colorGris" })
    </div>
