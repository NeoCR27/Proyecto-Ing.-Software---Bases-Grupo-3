@model ProyectoPI.Models.PROYECTO

@{
    ViewBag.Title = "Details";
}

@{
    string rol = ViewBag.rol;
}


<h2 class="titulosPag">Detalles Proyecto</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.objetivo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.objetivo)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.estado)
        </dd>
        <br />
        <dt>
            @Html.Label("Líder del proyecto", htmlAttributes: new { @class = "control-label col-md-18" })
        </dt>
        @{
            string liderActual = ViewBag.liderActual;
        }
        <dd>
            @liderActual
        </dd>
        <br />
        <dt>
            @Html.Label("Cliente asignado al proyecto")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CLIENTE.nombre)&nbsp;@Html.DisplayFor(model => model.CLIENTE.primerApellido)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.fechaInicio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fechaInicio)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.fechaFinalizacion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fechaFinalizacion)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.duracionEstimada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.duracionEstimada)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.duracionReal)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.duracionReal)
        </dd>
        <br />

    </dl>
</div>

@if (@rol.Equals("Jefe", StringComparison.InvariantCultureIgnoreCase))
{
<div class="col-md-offset-2 col-md-10">
    @Html.ActionLink("Modificar", "Edit", new { id = Model.idPK }, new { @class = "botonGeneral colorVerde" })
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Eliminar", "Delete", new { id = Model.idPK }, new { @class = "botonGeneral colorRojo" })
</div>
}

<div class="form-actions no-color">
    @Html.ActionLink("Volver", "Index", null, new { @class = "botonGeneral colorGris" })
</div>
