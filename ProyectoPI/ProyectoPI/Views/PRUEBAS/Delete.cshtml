@model ProyectoPI.Models.PRUEBAS
@{
    ViewBag.Title = "Delete";
    string idProyecto = ViewBag.idProy;
    string nombreReq = ViewBag.nomReq;
    string nombrePK = ViewBag.nomPK;
    string nombreProyecto = ViewBag.nomProy;
    string rol = ViewBag.my_rol;
}
<h2 class="titulosPag">eliminar prueba @nombrePK</h2>
<h3 class="miniTitulosPag">Proyecto: @nombreProyecto</h3>
<h3 class="miniTitulosPag">Requerimiento: @nombreReq</h3>
@if (!@rol.Equals("Cliente", StringComparison.InvariantCultureIgnoreCase))
{
    <h3>¿Esta seguro que quiere eliminar esta prueba?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.EstadoFinal)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EstadoFinal)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.resultadoDetalles)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.resultadoDetalles)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" class="botonGeneral colorRojo" data-toggle="modal" data-target="#eliminar">
                        Eliminar
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="eliminar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel"><strong>¿Está seguro que desea elimiar esta prueba?</strong></h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                                    <input type="submit" value="Eliminar" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h1>LOS CLIENTES NO PUEDEN ELIMINAR PRUEBAS</h1>
}
<div class="form-actions no-color">
    @Html.ActionLink("Volver", "Index", new { id = @idProyecto, nombre = @nombreReq, nombreProyecto = @nombreProyecto }, new { @class = "botonGeneral colorGris" })
</div>
