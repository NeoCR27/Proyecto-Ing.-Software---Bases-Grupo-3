@model List<ProyectoPI.Models.PARTICIPA>
@{
    ViewBag.Title = "Grafico Horas Por Req";
}
@{
    string nomProy = ViewBag.proy;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Cliente", "Index", "CLIENTE")</li>
                    <li>@Html.ActionLink("Proyecto", "Index", "PROYECTOes")</li>
                    <li>@Html.ActionLink("Equipo", "Index", "PARTICIPA")</li>
                    <li>@Html.ActionLink("Empleado", "Index", "EMPLEADO")</li>
                    <li>@Html.ActionLink("Reportes", "Index", "Consultas")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <h2 class="titulosPag">Horas Por Requerimiento</h2>
    <h3 class="miniTitulosPag"> Escoger Tester </h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <img src="../Img/emp.jpg" class="card-img-top" alt="...">
                            <h4 class="card-title">@Html.DisplayFor(x => item.EMPLEADO.nombre) @Html.DisplayFor(x => item.EMPLEADO.primerApellido)</h4>
                            <p class="card-text"><small class="text-muted">@Html.DisplayFor(x => item.EMPLEADO.correo)</small></p>
                            <p class="card-text">
                                @Html.ActionLink("Realizar Consulta", "MostrarHorasPorReq", new { proy = @nomProy, tester = item.cedulaEmpleadoFK }, new { @class = "botonGeneral colorCeleste" })
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    }
    <div>
        @Html.ActionLink("Volver", "HorasPorReq", null, new { @class = "botonGeneral colorGris" })
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    }
</body>
</html>
