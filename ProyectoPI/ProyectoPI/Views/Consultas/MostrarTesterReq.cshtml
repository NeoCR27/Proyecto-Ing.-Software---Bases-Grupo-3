

@{
    ViewBag.Title = "Create";
    string id = ViewBag.idEmp;
    List<ProyectoPI.Models.TesterParticipacionGlobalReq> datos = ViewBag.proyectoDatos;
    List<ProyectoPI.Models.TesterParticipacion> dificultad = ViewBag.data;
    List<ProyectoPI.Models.TesterParticipacionGlobal> percent = ViewBag.porcentaje;


}

<h2 class="titulosPag">Desempeño de los testers</h2>
<div style="width: 45%;float: left">
    <h4>Dificultad de los requerimientos</h4>
</div>
<div style="width: 45%;float: right">
    <h4>Desempeño global</h4>
</div>
<div style="width: 50%;float: left">
    <img src="@Url.Action("GraficoTesterReq",new { testerId = @id})" alt="Pie Chart using MVC" />

</div>

<div style="width: 45%;float: right">
    <img src="@Url.Action("GraficoTesterReqGlobal",new { testerId = @id})" alt="Pie Chart using MVC" />


</div>

<br /><br /><br /><br /><br /><br />
<br /><br /><br /><br /><br /><br />
<br /><br /><br /><br /><br /><br />
<br /><br /><br /><br /><br /><br />

<div style=" left:50%;width:45% ; float: left ;height:20%" class="jumbotron">
    <p style="text-align:center" display-1">Resultados</p>
    <p style="font-size:15px">
    </p>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Dificultad Baja</th>
                <th scope="col">Dificultad Intermedia</th>
                <th scope="col">Dificultad Alta</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in dificultad)
            {
            <tr>
                
                <td>@item.baja</td>
                <td>@item.intermedia</td>
                <td>@item.alta</td>

            </tr>

            <tr>
                @{
                    int total = item.intermedia + item.baja + item.alta;
                    double baja = item.baja * 100 / total;
                    double intermedia = item.intermedia * 100 / total;
                    double alta = item.alta * 100 / total;

                }
                <td>@baja %</td>
                <td>@intermedia %</td>
                <td>@alta %</td>

            </tr>
                    }

        </tbody>
    </table>
</div>
<div style=" right:50%;width:45%; float : right ;height:20%" class="jumbotron">
    <p style="text-align:center" display-1">Resultados</p>
    <p style="font-size:15px">
    </p>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Participacion</th>
                <th scope="col">Total</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in percent)
            {
            <tr>
                <td>@item.participacion</td>

                <td>@item.total</td>
            </tr>
            <tr>
                @{
                    int percentage = item.participacion * 100 / item.total;
                }
                <td>@percentage %</td>
                <td>100 %</td>

            </tr>
            }

        </tbody>
    </table>
</div>
<div style="width: 100%; float:right">
    @Html.ActionLink("Volver", "TesterReq", null, new { @class = "botonGeneral colorGris" })
</div>
